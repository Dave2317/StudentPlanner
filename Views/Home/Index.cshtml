@model StudentPlanner.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
    <div>
        <h1 class="page-title">Dashboard</h1>
        <p class="page-subtitle">Track your study progress for this week at a glance.</p>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card stat-card h-100">
            <div class="card-body">
                <h5 class="card-title">Tasks This Week</h5>
                <div class="stat-value">@Model.TasksThisWeek</div>
                <p class="text-muted small mb-0">Entries in the last 7 days</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card h-100">
            <div class="card-body">
                <h5 class="card-title">Hours Studied</h5>
                <div class="stat-value">@Model.HoursLast7Days</div>
                <p class="text-muted small mb-0">Total hours (last 7 days)</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card h-100">
            <div class="card-body">
                <h5 class="card-title">Today's Tasks</h5>
                <div class="stat-value">@Model.TodayTasks</div>
                <p class="text-muted small mb-0">Entries dated today</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card h-100">
            <div class="card-body">
                <h5 class="card-title">Completion Rate</h5>
                <div class="stat-value">@Model.CompletionRate.ToString("0") %</div>
                <p class="text-muted small mb-0">Completed / total this week</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <h3 class="mb-3">Today's Entries</h3>

        @if (Model.TodayEntries.Any())
        {
            <div class="table-responsive table-styled">
                <table class="table sp-table">
                    <thead>
                        <tr>
                            <th>Course</th>
                            <th>Description</th>
                            <th style="width:120px;">Hours</th>
                            <th style="width:140px;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model.TodayEntries)
                        {
                            <tr>
                                <td>@e.Course</td>
                                <td>@e.TaskDescription</td>
                                <td>@e.Hours</td>
                                <td>@e.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="card stat-card">
                <div class="card-body">
                    <p class="mb-1"><strong>No entries for today yet.</strong></p>
                    <p class="mb-2 text-muted small">Add a task in the Daily Entries section to see it here.</p>
                    <a asp-controller="DayEntries" asp-action="Create" class="btn btn-primary btn-sm">
                        Add Today’s Entry
                    </a>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <div class="card email-summary-card h-100">
            <div class="card-body d-flex flex-column">
                <h4 class="mb-2">Email Summary</h4>
                <p class="text-muted small">
                    Send today’s study summary to your email for backup or quick review.
                </p>

                <form asp-action="EmailTodaySummary" method="post" class="mt-auto">
                    <button type="submit" class="btn btn-primary w-100">
                        Send Email
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
