@model StudentPlanner.Models.ReportsViewModel

@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">
    <h1 class="mb-4">Reports &amp; Analytics</h1>
    <p class="text-muted mb-4">
        Insights into your study patterns based on your daily entries.
    </p>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Hours (All Time)</h5>
                    <p class="display-6">@Model.TotalHoursAllTime</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Entries in Last 7 Days</h5>
                    <p class="display-6">@Model.EntriesLast7Days</p>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mt-3 mb-3">Hours by Course</h3>

    @if (Model.CourseSummaries.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Total Hours</th>
                    <th>Number of Entries</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.CourseSummaries)
                {
                    <tr>
                        <td>@course.Course</td>
                        <td>@course.TotalHours</td>
                        <td>@course.EntryCount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No data yet. Add some daily entries to see your reports.</p>
    }
</div>
