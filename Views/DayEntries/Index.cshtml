@model IEnumerable<StudentPlanner.Models.DayEntry>
@{
    ViewData["Title"] = "Daily Entries";
}

<h1 class="page-title">Daily Entries</h1>
<p class="page-subtitle">Log your study tasks, hours, and status each day.</p>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add New Entry</a>
</div>

<div class="table-responsive table-styled">
    <table class="table mb-0">
       
<table class="table sptable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Date)</th>
            <th>@Html.DisplayNameFor(model => model.First().Course)</th>
            <th>@Html.DisplayNameFor(model => model.First().TaskDescription)</th>
            <th>@Html.DisplayNameFor(model => model.First().Hours)</th>
            <th>@Html.DisplayNameFor(model => model.First().Status)</th>
            <th>@Html.DisplayNameFor(model => model.First().Notes)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Course</td>
            <td>@item.TaskDescription</td>
            <td>@item.Hours</td>
            <td>@item.Status</td>
            <td>@item.Notes</td>
            <td>
    <div class="action-buttons">
        <a asp-action="Details" asp-route-id="@item.Id" class="btn-action btn-details">Details</a>
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action btn-edit">Edit</a>
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action btn-delete">Delete</a>
    </div>
</td>
        </tr>
}
    </tbody>
</table>
